#!/usr/bin/python3

import sys

def main():
    # 引数が足りない場合は、終了ステータス 1 (エラー) で終了する
    if len(sys.argv) < 3:
        sys.exit(1)

    base = float(sys.argv[1])
    max_n = int(float(sys.argv[2]))

    print(f"--- {base:,} の累乗テーブル ---")

    for i in range(1, max_n + 1):
        val = base ** i
        print(f"{base:,} ^ {i} = {val:,}")

if __name__ == "__main__":
    main()
